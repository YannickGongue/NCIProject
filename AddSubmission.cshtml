@model NCIProject.Models.Submission
@using NCIProject.Models

@{
   ViewBag.Title = "AddSubmission";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
   #TextArea1 {
      margin-left: 300px;
      margin-top: -200px;
   }

   #TextArea3 {
      margin-left: 550px;
      margin-top: -30px;
   }

   #TextArea2 {
      margin-left: 200px;
      margin-top: 0px;
   }

   b {
      font-size: 30px;
   }
</style>



<h4><b>Create</b> Enter Submission details</h4>

@using (Html.BeginForm("AddSubmission", "Submission", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   @Html.AntiForgeryToken()

<div class="form-horizontal">

   <hr />

   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   <div class="form-group">
      @Html.LabelFor(model => model.File_ID, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-4">
         <input type="file" name="uploadfile" value="choose File" />
         @Html.ValidationMessageFor(model => model.File_ID, "", new { @class = "text-danger" })
         @ViewBag.Message
      </div>
   </div>

   <div class="form-group">
      @Html.LabelFor(model => model.Student_ID, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-4">
         @Html.DropDownList("Student_ID",
    new SelectList(Enum.GetValues(typeof(Student_ID))),
    "Select a User Role",
    new { @class = "form-control" })
         @Html.ValidationMessageFor(model => model.Student_ID, "", new { @class = "text-danger" })
      </div>
   </div>

   <div class="form-group">
      @Html.LabelFor(model => model.Linkedlin, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-4">
         @Html.EditorFor(model => model.Linkedlin,
new { htmlAttributes = new { @class = "form-control" } })
         @Html.ValidationMessageFor(model => model.Linkedlin, "", new { @class = "text-danger" })
      </div>
   </div>

   <div class="form-group">
      @Html.LabelFor(model => model.Projektfile, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-4">
         @Html.EditorFor(model => model.Projektfile, new { htmlAttributes = new { @class = "form-control" } })
         @Html.ValidationMessageFor(model => model.Projektfile, "", new { @class = "text-danger" })
      </div>
   </div>
   <form class="form-group">
      <div id="TextArea1">
         <p>200 word profil:</p>
         @Html.TextAreaFor(model => model.Longdesc, new { @class = "form-control" })
      </div>
   </form>
   <form class="form-group">
      <div id="TextArea2">
         <p>30/40 Word profil: </p>
         @Html.TextAreaFor(model => model.Shortdesc, new { @class = "form-control" })
      </div>
   </form>

   <form class="form-group">
      <div id="TextArea3">
         <p>Technologie:</p>
         @Html.TextAreaFor(model => model.Tech, new { @class = "form-control" })
         <p>
            technologie no listen? Email Administrator to request new Technologie
            <button> <span class="glyphicon glyphicon-pencil"></span> Email </button>
         </p>
      </div>
   </form>



   <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
         <input type="submit" value="Create" class="btn btn-default" />
      </div>
   </div>
</div>
}



<div>
   @Html.ActionLink("Back to List", "Index")
</div>
